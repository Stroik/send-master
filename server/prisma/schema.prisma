generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Whatsapp {
  id        String    @id @default(uuid())
  phone     String?   @unique
  session   String?
  status    String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  Message   Message[]
}

model Message {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  content   String
  senderId  String
  phone     String
  media     String
  status    String?
  Whatsapp  Whatsapp @relation(fields: [senderId], references: [id])
}
